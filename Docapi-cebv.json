{
  "openapi": "3.0.0",
  "info": {
    "title": "Api Comision Estatal de Busqueda de Veracruz",
    "version": "v2",
    "description": "Esta API proporciona la estructura de las operacones que se realizaran."
  },
  "servers": [
    {
      "url": "https://locallhost/api"
    }
  ],
  "paths": {
    "/personas": {
      "get": {
        "summary": "Obtiene una lista de personas desaparecidas registradas",
        "tags": [
          "Personas"
        ],
        "parameters": [
          {
            "name": "campos",
            "in": "query",
            "description": "Campos a buscar (separados por coma).",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "paginacion",
            "in": "query",
            "description": "Número de resultados por página.",
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "devolver_con, ",
            "in": "query",
            "description": "Relaciones a incluir (separadas por coma).",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Persona"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "post": {
        "summary": "Crea el registro de varias personas a la vez.",
        "tags": [
          "Personas"
        ],
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Persona"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/persona/{id}": {
      "get": {
        "summary": "Obtiene los datos de una personas desaparecida registrada",
        "tags": [
          "Personas"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64",
              "minimum": 1
            },
            "description": "El ID de la persona."
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Persona"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "delete": {
        "summary": "Elimina el registro de persona por su ID.",
        "tags": [
          "Personas"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "El ID de la persona a eliminar.",
            "schema": {
              "type": "integer",
              "minimum": 1
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Borrado correcto.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "mensaje": {
                      "type": "string",
                      "example": "Borrado correcto"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Persona no encontrada."
          },
          "500": {
            "description": "Error interno del servidor."
          }
        }
      }
    },
    "/persona": {
      "post": {
        "summary": "Crea el registro de una sola personas",
        "tags": [
          "Personas"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/PersonaInput"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Persona"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/desapariciones": {
      "get": {
        "summary": "Obtener todas las desapariciones",
        "tags": [
          "Desaparicion"
        ],
        "responses": {
          "200": {
            "description": "Lista de desapariciones",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/DesaparicionResource"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Crear una nueva desaparición",
        "tags": [
          "Desaparicion"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/StoreDesaparicionRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Desaparición creada exitosamente",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DesaparicionResource"
                }
              }
            }
          }
        }
      }
    },
    "/desapariciones/{id}": {
      "get": {
        "summary": "Obtener una desaparición por su ID",
        "tags": [
          "Desaparicion"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Desaparición encontrada",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DesaparicionResource"
                }
              }
            }
          },
          "404": {
            "description": "Desaparición no encontrada"
          }
        }
      },
      "put": {
        "summary": "Actualizar una desaparición existente",
        "tags": [
          "Desaparicion"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateDesaparicionRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Desaparición actualizada exitosamente"
          },
          "404": {
            "description": "Desaparición no encontrada"
          }
        }
      },
      "delete": {
        "summary": "Eliminar una desaparición existente",
        "tags": [
          "Desaparicion"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Desaparición eliminada exitosamente"
          },
          "401": {
            "description": "No autorizado"
          },
          "404": {
            "description": "Desaparición no encontrada"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
