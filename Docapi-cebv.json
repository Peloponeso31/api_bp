        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64",
            "description": "El ID de la persona."
          },
          "nombre": {
            "type": "string",
            "description": "El nombre de la persona."
          },
          "apellido paterno": {
            "type": "string",
            "description": "El apellido paterno de la persona."
          },
          "apellido materno": {
            "type": "string",
            "description": "El apellido materno de la persona."
          },
          "fecha_nacimiento": {
            "type": "string",
            "format": "date",
            "description": "La fecha de nacimiento de la persona (formato YYYY-MM-DD)."
          },
          "curp ": {
            "type": "string",
            "description": "El curp de la persona."
          },
          "ocupacion": {
            "type": "string",
            "description": "La ocupacion de la persona."
          },
          "genero": {
            "type": "string",
            "description": "El genero de la persona."
          },
          "sexo_al_nacer": {
            "type": "string",
            "description": "El sexo de la persona."
          }
        }
      },
      "PersonaInput": {
        "type": "object",
        "properties": {
          "nombre": {
            "type": "string",
            "description": "El nombre de la persona."
          },
          "apellido paterno": {
            "type": "string",
            "description": "El apellido paterno de la persona."
          },
          "apellido materno": {
            "type": "string",
            "description": "El apellido materno de la persona."
          },
          "fecha_nacimiento": {
            "type": "string",
            "format": "date",
            "description": "La fecha de nacimiento de la persona (formato YYYY-MM-DD)."
          },
          "curp ": {
            "type": "string",
            "description": "El curp de la persona."
          },
          "ocupacion": {
            "type": "string",
            "description": "La ocupacion de la persona."
          },
          "genero": {
            "type": "string",
            "description": "El genero de la persona."
          },
          "sexo": {
            "type": "string",
            "description": "El sexo de la persona."
          }
        }
      },
      "DesaparicionResource": {
        "type": "object",
        "properties": {}
      },
      "StoreDesaparicionRequest": {
        "type": "object",
        "properties": {}
      },
      "UpdateDesaparicionRequest": {
        "type": "object",
        "properties": {}
      }
    },
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}